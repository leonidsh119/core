<?xml version="1.0" encoding="UTF-8"?>
<PolicySet xmlns="urn:oasis:names:tc:xacml:3.0:core:schema:wd-17" PolicyCombiningAlgId="urn:oasis:names:tc:xacml:3.0:policy-combining-algorithm:deny-overrides" PolicySetId="urn:spt:names:tc:xacml:3.0:policySetid:01" Version="3.0">
	<Description>A5S Authorization policy</Description>
	<Target/>
	<Policy RuleCombiningAlgId="urn:oasis:names:tc:xacml:3.0:rule-combining-algorithm:deny-overrides" PolicyId="urn:spt:names:tc:xacml:3.0:policyid:sql-servers" Version="3.0">
		<Description>SQL Servers</Description>
		<Target>
			<AnyOf>
				<AllOf>
					<Match MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
						<AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">network</AttributeValue>
						<AttributeDesignator Category="urn:oasis:names:tc:xacml:3.0:attributecategory:resource" AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="false"/>
					</Match>
				</AllOf>
			</AnyOf>
		</Target>
		<CombinerParameters>
			<CombinerParameter ParameterName="dst-sgt">
				<AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">100</AttributeValue>
			</CombinerParameter>
		</CombinerParameters>
		<VariableDefinition VariableId="developer-group-name">
			<AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">dev</AttributeValue>
		</VariableDefinition>
		<VariableDefinition VariableId="manager-group-name">
			<AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">mgr</AttributeValue>
		</VariableDefinition>
		<VariableDefinition VariableId="radius-nas-port-wired">
			<AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">wired</AttributeValue>
		</VariableDefinition>
		<Rule Effect="Permit" RuleId="permit-wired-developer">
			<Description>Allows access to Developers from wired connection</Description>
			<Condition>
				<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:and">
					<Description>AND</Description>
					<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
						<Description>User belongs to dev group</Description>
						<VariableReference VariableId="developer-group-name"/>
						<AttributeDesignator Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject" AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id-qualifier" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
					</Apply>
					<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
						<Description>Endpoint connected by wire</Description>
						<VariableReference VariableId="radius-nas-port-wired"/>
						<AttributeDesignator Category="urn:oasis:names:tc:xacml:3.0:attributecategory:environment" AttributeId="urn:oasis:names:tc:xacml:1.0:environment:radius-nas-port" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
					</Apply>
				</Apply>
			</Condition>
		</Rule>
		<Rule Effect="Permit" RuleId="permit-manager">
			<Description>Allows access to Managers</Description>
			<Condition>
				<Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
					<Description>User belongs to Managers group</Description>
					<VariableReference VariableId="manager-group-name"/>
					<AttributeDesignator Category="urn:oasis:names:tc:xacml:1.0:subject-category:access-subject" AttributeId="urn:oasis:names:tc:xacml:1.0:subject:subject-id-qualifier" DataType="http://www.w3.org/2001/XMLSchema#string" MustBePresent="true"/>
				</Apply>
			</Condition>
		</Rule>
		<AdviceExpressions>
			<AdviceExpression AppliesTo="Permit" AdviceId="100"/>
		</AdviceExpressions>
	</Policy>
</PolicySet>
